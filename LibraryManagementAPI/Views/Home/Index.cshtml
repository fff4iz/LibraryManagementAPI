@{
    ViewData["Title"] = "Home Page";
}

<!-- Custom CSS for Carousel and Page -->
<style>

    /* Carousel styles */
    .carousel {
        background-color: gray; /* Set the carousel background to black */
        border-radius:15px;
    }

    .carousel-item img {
        height: 400px; /* Adjust height as needed for better display */
        width: 100%; /* Set width to full to make it responsive */
        object-fit: contain; /* Ensure the image covers the entire area */
        margin: 0 auto; /* Center the image horizontally */
        border-radius: 20px; /* Make the image corners rounded */
    }

    .carousel-caption {
        background: rgba(0, 0, 0, 0.7); /* More opaque background for better readability */
        padding: 15px;
        border-radius: 10px;
    }

        .carousel-caption h5 {
            font-size: 1.5rem;
            color: #fff;
        }

    .carousel-control-prev-icon, .carousel-control-next-icon {
        background-color: rgba(0, 0, 0, 0.5); /* Change color of control buttons */
        border-radius: 50%; /* Make control buttons circular */
        padding: 10px;
    }

    /* Add a shadow to the carousel */
    .carousel-inner {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 20px; /* Make the carousel corners more rounded */
    }

</style>

<div class="text-center">
    <h1 class="display-4" style="color:black">Welcome to</h1>
    <h3 class="display-7">Library Management System (LMS)</h3>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

