<!-- JavaScript for Bootstrap Carousel -->
<script>
    // Ensure that the carousel automatically slides after the page loads
    document.addEventListener('DOMContentLoaded', function () {
        var carouselElement = document.getElementById('advertisementCarousel');
        var carousel = new bootstrap.Carousel(carouselElement, {
            interval: 3000, // Set auto slide interval (3 seconds)
            ride: 'carousel' // Start the carousel automatically
        });
    });
</script>
