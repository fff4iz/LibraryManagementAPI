@model LibraryManagementAPI.Models.Book

<h2>Delete Book</h2>

<h3>Are you sure you want to delete this book?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Book ID
        </dt>
        <dd class="col-sm-10">
            @Model.BookID
        </dd>
        <dt class="col-sm-2">
            Book Title
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @Model.Author
        </dd>
        <dt class="col-sm-2">
            Publisher
        </dt>
        <dd class="col-sm-10">
            @Model.Publisher
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="BookID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
