@model LibraryManagementAPI.Models.Book

<style>
    .uppercase {
        text-transform: uppercase;
    }
</style>

<h2>Borrow Book</h2>

<form asp-action="Borrow" method="post">
    <input type="hidden" asp-for="BookID" /> <!-- Hidden field to store BookID -->

    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control uppercase" oninput="toUpperCase(this)" readonly />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Author" class="control-label"></label>
        <input asp-for="Author" class="form-control uppercase" oninput="toUpperCase(this)" readonly />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Publisher" class="control-label"></label>
        <input asp-for="Publisher" class="form-control uppercase" oninput="toUpperCase(this)" readonly />
        <span asp-validation-for="Publisher" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <input asp-for="Status" class="form-control" value="BORROWED" readonly />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BorrowerName" class="control-label"></label>
        <input asp-for="BorrowerName" class="form-control" uppercase" oninput="toUpperCase(this)"  />
        <span asp-validation-for="BorrowerName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

<script>
    function toUpperCase(element) {
        element.value = element.value.toUpperCase();
    }
</script>